<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="stanbol.plone">
    
    <include package="Products.CMFPlone" />
    
    <include file="profiles.zcml" />
    
    <browser:page
        name="stanbolenhancementsraw"
        for="Products.Archetypes.interfaces.IBaseObject"
        layer="stanbol.plone.Layer"
        permission="zope2.View"
        template="templates/raw.pt"
        class=".browser.RawEnhancementsView"
    />
    <browser:page
        name="stanbolenhancements"
        for="Products.Archetypes.interfaces.IBaseObject"
        layer="stanbol.plone.Layer"
        permission="zope2.View"
        template="templates/enhancements.pt"
        class=".browser.RawEnhancementsView"
    />
     
    <subscriber for="Products.Archetypes.interfaces.IBaseObject
                     Products.Archetypes.interfaces.IObjectInitializedEvent"
                handler=".subscribers.stanbol_indexer_handler" />

    <subscriber for="Products.Archetypes.interfaces.IBaseObject
                     Products.Archetypes.interfaces.IObjectEditedEvent"
                handler=".subscribers.stanbol_indexer_handler" />
              
 </configure>